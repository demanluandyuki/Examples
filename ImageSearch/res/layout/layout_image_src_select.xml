<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/app_select_itme_width"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    
    <ImageView
        android:id="@+id/image_src_select_item"
        android:layout_width="@dimen/app_select_image_size"
        android:layout_height="@dimen/app_select_image_size"
        android:contentDescription="@string/search_image_button"
        />
    <TextView
        android:id="@+id/text_src_select_item"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="16sp"
        android:gravity="center"
        />

</LinearLayout>
